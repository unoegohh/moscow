
<form method="post" class="form-horizontal form-bordered">
    {{ form_widget(form._token) }}
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-email">Заголовок</label>

        <div class="col-md-9">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Ссылка</label>

        <div class="col-md-9">
            {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">Что-то типа http://site.ru/{значение}</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Показывать на сайте</label>

        <div class="col-md-9">
            <div class="checkbox">
                {{ form_widget(form.active) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label" for="example-hf-password">Заблокирован</label>

        <div class="col-md-9">
            <div class="checkbox">
                {{ form_widget(form.show_to_user) }}
            </div>
            <span class="help-block">Если есть галочка будет виден только авторизированным пользователям</span>
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-12">
            {{ form_widget(form.text, {'attr': {'class': 'textarea-editor form-control ', 'rows' : 10}}) }}
        </div>
    </div>

    <div class="form-group form-actions">
        <div class="col-md-9 col-md-offset-3">
            <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-user"></i> Сохранить
            </button>
        </div>
    </div>
</form>