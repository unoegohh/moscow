{% extends "UnoegohhAdminBundle::layout.html.twig" %}

{% block content %}

    <!-- Datatables Header -->
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-table"></i>Баннеры</small>
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li><a href="{{ path("unoegohh_admin_homepage") }}">Главная</a></li>
        <li>Баннеры</li>
    </ul>
    <!-- END Datatables Header -->

    <!-- Datatables Content -->
    <div class="block full">
        <div class="block-title">
            <h2><strong>Баннеры</strong> на главной</h2>
            <div class="block-options pull-right">
                <a href="{{ path("unoegohh_admin_banners_create") }}" class="btn btn-sm btn-success btn-option">Добавить</a>

            </div>
        </div>

        {% for i in app.session.flashbag.get('notice') %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="fa fa-check-circle"></i> {{ i }}</h4>
            </div>
        {% endfor %}
        {% if banners %}
            <div class="table-responsive">
                <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
                    <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th>Название</th>
                        <th>Активен</th>
                        <th class="text-center">Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cat in banners %}
                        <tr>
                            <td class="text-center">{{ cat.id }}</td>
                            <td><a href="{{ path("unoegohh_admin_banners_edit", {"id" : cat.id}) }}">{{ cat.name }}</a></td>
                            <td>{% if cat.active %}<i class="fa fa-check text-success"></i>{% else %}<i class="fa fa-times text-danger"></i>{% endif %}</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="{{ path("unoegohh_admin_banners_edit", {"id" : cat.id}) }}" data-toggle="tooltip" title="Edit" class="btn btn-xs btn-default"><i class="fa fa-pencil"></i></a>
                                    <a href="{{ path("unoegohh_admin_banners_remove", {"id" : cat.id}) }}" data-toggle="tooltip" title="Delete" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p>Нет баннеров</p>

        {% endif %}
    </div>
{% endblock %}