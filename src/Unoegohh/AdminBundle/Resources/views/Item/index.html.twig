{% extends "UnoegohhAdminBundle::layout.html.twig" %}

{% block scripts %}
    <script>
        $(function () {

            App.datatables();
            $('#products').DataTable({
                "aoColumnDefs": [ { "bSortable": false, "aTargets": [  4] } ],
                "iDisplayLength": 10,
                "aLengthMenu": [[10, 20, 30, -1], [10, 20, 30, "All"]]
            });

            /* Add Bootstrap classes to select and input elements added by datatables above the table */
            $('.dataTables_filter input').addClass('form-control').attr('placeholder', 'Поиск');
            $('.dataTables_length select').addClass('form-control');
        });
    </script>
{% endblock %}

{% block content %}

    <!-- Datatables Header -->
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-table"></i>Продукты</small>
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li><a href="{{ path("unoegohh_admin_homepage") }}">Главная</a></li>
        <li>Продукты</li>
    </ul>
    <!-- END Datatables Header -->

    <!-- Datatables Content -->
    <div class="block full">
        <div class="block-title">
            <h2><strong>Продукты</strong></h2>

            <div class="block-options pull-right">
                <a href="{{ path("unoegohh_admin_food_item_create") }}" class="btn btn-sm btn-success btn-option">Добавить</a>

            </div>
        </div>

        {% for i in app.session.flashbag.get('notice') %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="fa fa-check-circle"></i> {{ i }}</h4>
            </div>
        {% endfor %}
        {% if result %}
            <div class="table-responsive">
            <table id="products" class="table table-vcenter table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th>Название</th>
                        <th>Категория</th>
                        <th>Цена</th>
                        <th>Активен</th>
                        <th class="text-center">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for i in result %}
                        <tr>
                            <td class="text-center">{{ i.id }}</td>
                            <td>{{ i.name }}</td>
                            <td>{{ i.getCategoryId().GetName() }}</td>
                            <td>{{ i.price }}</td>
                            <td>{% if i.active %}<i class="fa fa-check text-success"></i>{% else %}<i class="fa fa-times text-danger"></i>{% endif %}</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="{{ path("unoegohh_admin_food_item_edit", {"id": i.id}) }}" data-toggle="tooltip" title="" class="btn btn-xs btn-default" data-original-title="Редактирование"><i class="fa fa-pencil"></i></a>
                                    <a href="{{ path("unoegohh_admin_food_item_remove", {"id": i.id}) }}" data-toggle="tooltip" title="" class="btn btn-xs btn-danger" data-original-title="Удаление"><i class="fa fa-times"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        {% else %}
            <p>Нет продуктов</p>

        {% endif %}
    </div>
{% endblock %}